	<groupId>io.github.microvibe.test</groupId>
	<version>1.0</version>
	<packaging>jar</packaging>

	<properties>
		<maven.test.skip>false</maven.test.skip>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<build>
	</build>

	<dependencyManagement>
		<dependencies>
		</dependencies>
